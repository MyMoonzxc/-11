#include<stdio.h>
#include<locale.h>

#define N 10  
int main()
{
    setlocale(LC_CTYPE, "RUS");
    float A[N];
    float s = 0;
    
    for (int i = 0; i < N; i++)  
    {
        printf("a[%d]=", i + 1);
        scanf("%f", &A[i]);
        s += A[i];
        
    }


    printf("| индекс | исходное значение | новое значение   |\n");
    printf("|--------|-------------------|------------------|\n");

    for (int i = 0; i < N; i++)  
    {
        printf("| %6d | %16.2f | %15.2f |\n", i + 1, A[i], A[i] - 10);
    }
    printf("Среднее арифметическое равно %.2f", s / N);
    return 0;
}
